<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFA1091D"
    tools:context="com.example.smithnwokocha.mytictactoe.Computer3to5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/tictactoepix" />
        <Button
            android:id="@+id/by3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="190dp"
            android:layout_marginEnd="10dp"
            android:background="#FF0929F2"
            android:textColor="#fff"
            android:layout_marginStart="10dp"
            android:text="3 x 3" />

        <Button
            android:id="@+id/by4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/by3"
            android:layout_marginTop="5dp"
            android:background="#FF0929F2"
            android:textColor="#fff"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:text="4 x 4" />

        <Button
            android:id="@+id/by5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/by4"
            android:layout_marginTop="5dp"
            android:background="#FF0929F2"
            android:textColor="#fff"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:text="5 x 5" />


        <Button
            android:id="@+id/x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/by5"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="240dp"
            android:background="#FF0929F2"
            android:paddingBottom="4dp"
            android:paddingEnd="36dp"
            android:paddingStart="36dp"
            android:paddingTop="4dp"
            android:text="x"
            android:textColor="#fff"
            android:textSize="26sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/o"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/by5"
            android:background="#FF0929F2"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="240dp"
            android:paddingBottom="4dp"
            android:paddingEnd="36dp"
            android:paddingStart="36dp"
            android:textColor="#fff"
            android:paddingTop="4dp"
            android:text="o"
            android:textSize="26sp"
            android:visibility="gone" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
